<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="hot"		class="com.edu.di.coffeeshop.coffee5.HotAmericano"></bean>
	<bean id="ice"		class="com.edu.di.coffeeshop.coffee5.IceAmericano"></bean>

	<!-- Coffee coffee = new Coffee(Americano am); -->
	<bean id="coffee"	class="com.edu.di.coffeeshop.coffee5.Coffee">
		<constructor-arg ref="ice"></constructor-arg>
	</bean>
</beans>
